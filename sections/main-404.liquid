<div class="page-width text-center">
  <h1>{{ section.settings.title }}</h1>
  <p>{{ section.settings.text }}</p>
  {% if section.settings.button_label != blank %}
    <a href="{{ section.settings.button_link | default: '/' }}" class="button">
      {{ section.settings.button_label }}
    </a>
  {% endif %}
</div>

{% schema %}
{
  "name": "404 Page",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Page not found"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "The page you were looking for does not exist."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Return to home"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ]
}
{% endschema %}